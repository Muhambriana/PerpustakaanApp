<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistik.MemberStatisticFragment"
    android:background="@drawable/custom_fragment_cover"
    android:paddingTop="50dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko"
        android:text="Aktivitas Bulan Ini"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="161dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:text="Belum  Dikembalikan"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/divider_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_stat_1"
                android:layout_width="129dp"
                android:layout_height="89dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:gravity="center"
                android:text="0"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/divider_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_1" />

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="147dp"
                android:layout_height="37dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:text="Pengejauan Ditolak"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/divider_2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_stat_2"
                android:layout_width="170dp"
                android:layout_height="83dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:gravity="center"
                android:text="76"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_2"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_2" />

            <TextView
                android:id="@+id/tv_title_3"
                android:layout_width="163dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:text="Menunggu Persetujuan"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/divider_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_1" />

            <TextView
                android:id="@+id/tv_stat_3"
                android:layout_width="129dp"
                android:layout_height="89dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:gravity="center"
                android:text="4"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/divider_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_3" />

            <TextView
                android:id="@+id/tv_title_4"
                android:layout_width="138dp"
                android:layout_height="46dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:text="Total Peminjaman"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/divider_2"
                app:layout_constraintTop_toBottomOf="@+id/divider_1" />

            <TextView
                android:id="@+id/tv_stat_4"
                android:layout_width="171dp"
                android:layout_height="85dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mo_me"
                android:gravity="center"
                android:text="2399"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_2"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_4" />

            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider_2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>

