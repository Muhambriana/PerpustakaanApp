<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PerpustakaanApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->+
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="materialAlertDialogTheme">@style/CustomAlertDialogStyle</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="snackbarStyle">@style/CustomSnackBar</item>
        <item name="snackbarTextViewStyle">@style/CustomSnackBar.Text</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <!--Custom Style For Home Activity-->
    <style name="HomeActivityStyle" parent="Theme.PerpustakaanApp">
        <item name="actionBarStyle">@style/ActionBarStyle.Padding</item>
        <item name="navigationIcon">@drawable/icon_user</item>
    </style>

    <!--Custom Action Bar Logo with Title-->
    <style name="ActionBarStyle" parent="Theme.PerpustakaanApp">
        <item name="displayOptions">showHome|useLogo|showTitle</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="ActionBarStyle.Padding" parent="Theme.PerpustakaanApp">
        <item name="displayOptions">showHome|useLogo|showTitle</item>
        <item name="android:paddingStart">20dp</item>
<!--        <item name="titleTextStyle">@style/aa</item>-->
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
<!--        <item name="logo">@drawable/actionbar_space</item>-->
    </style>

    <!--Custom AllTextToWhite Color-->
    <style name="TextColorWhite" parent="@style/Theme.PerpustakaanApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/amiko</item>
    </style>

    <!--Custom Activity/Fragment to Bottom Sheet Dialog-->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <!--====================================================================================================-->

    <!--Custom Alert Dialog-->
    <style name="CustomAlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/black</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#c7c7c7</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_500</item>
        <item name="rippleColor">#ad1457</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorRed</item>
        <item name="rippleColor">#a4a4a4</item>
    </style>
    <!--===========================================================================================-->

    <style name="UpdateActivityStyle" parent="Theme.PerpustakaanApp">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--Custom Snack Bar-->
    <style name="CustomSnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">45dp</item>
        <item name="animationMode">slide</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="CustomSnackBar.Text" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Custom Navigation Up Icon-->
<!--    <style name="NavigationUp" parent="Widge">-->

<!--    </style>-->
    
    <style name="DialogTheme" parent="Theme.PerpustakaanApp">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>